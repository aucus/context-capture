{
  "name": "context-capture",
  "version": "1.0.0",
  "description": "Chrome extension for capturing screen regions, OCR text extraction, and AI-powered summaries",
  "main": "dist/background/background.js",
  "scripts": {
    "build": "webpack --mode production",
    "dev": "webpack --mode development --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.{ts,tsx}",
    "type-check": "tsc --noEmit",
    "build:dev": "webpack --mode development",
    "package": "webpack --mode production && zip -r dist.zip dist/"
  },
  "keywords": [
    "chrome-extension",
    "ocr",
    "ai",
    "text-extraction",
    "summarization"
  ],
  "author": "ContextCapture Team",
  "license": "MIT",
  "devDependencies": {
    "@types/chrome": "^0.0.254",
    "@types/jest": "^29.5.8",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "copy-webpack-plugin": "^11.0.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.2",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "tesseract.js": "^5.0.3"
  }
}
